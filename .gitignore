#!/bin/bash

# List of files and directories to remove
declare -a arr=(".phpunit.cache" "/node_modules" "/public/build" "/public/hot" "/public/storage" "/storage/*.key" "/vendor" ".env" ".env.backup" ".env.production" ".phpunit.result.cache" "Homestead.json" "Homestead.yaml" "auth.json" "npm-debug.log" "yarn-error.log" "/.fleet" "/.idea" "/.vscode")

# Iterate over the list and remove each item
for item in "${arr[@]}"
do
  if [ -d "$item" ]; then
    rm -rf "$item"
  elif [ -f "$item" ]; then
    rm "$item"
  fi
done
